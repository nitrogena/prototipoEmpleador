<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fragment_vacantes"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="org.jboard.prototipo.Fragments.VacantesFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/av_tvTitulo"
        android:text="@string/ad_tvVacantes"
        android:textAlignment="center"
        android:textSize="@dimen/ar_titulo"
        android:layout_marginBottom="@dimen/aa_layout_marginBottom"
        android:layout_below="@+id/toolbar"/>

    <android.support.v4.widget.SwipeRefreshLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/srlRefresh"
        android:layout_below="@id/av_tvTitulo">



        <android.support.v7.widget.RecyclerView
            android:id="@+id/rvVacante"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </android.support.v7.widget.RecyclerView>

    </android.support.v4.widget.SwipeRefreshLayout>



</RelativeLayout>