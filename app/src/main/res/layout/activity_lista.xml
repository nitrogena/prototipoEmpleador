<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"

    android:id="@+id/activity_lista"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="org.jboard.prototipo.ListaActivity">

    <include android:id="@+id/actionBar"
        layout="@layout/action_bar">
    </include>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/al_tvTitulo"
        android:text="@string/fp_tvTitulo"
        android:textAlignment="center"
        android:textSize="@dimen/ar_titulo"
        android:layout_marginBottom="@dimen/aa_layout_marginBottom"
        android:layout_below="@+id/actionBar"
        />

    <android.support.v4.widget.SwipeRefreshLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/srlRefresh"
        android:layout_below="@id/al_tvTitulo">

        <!-- SE USO RECYCLER
        <ListView
            android:id="@+id/lv_postulantes"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </ListView>-->


        <android.support.v7.widget.RecyclerView
            android:id="@+id/rvPostulante"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </android.support.v7.widget.RecyclerView>

    </android.support.v4.widget.SwipeRefreshLayout>



</RelativeLayout>

